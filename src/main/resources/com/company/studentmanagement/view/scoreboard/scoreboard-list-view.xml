<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://scoreboardListView.title"
      focusComponent="scoreboardsDataGrid">
    <data>
        <collection id="scoreboardsDc"
                    class="com.company.studentmanagement.entity.Scoreboard">
            <fetchPlan extends="_base">
                <property name="student" fetchPlan="_base"/>
                <property name="major" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="scoreboardsDl" readOnly="true">
                <query>
                    <![CDATA[select e from Scoreboard e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="scoreboardsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="scoreboardsDataGrid.create"/>
            <button id="editButton" action="scoreboardsDataGrid.edit"/>
            <button id="removeButton" action="scoreboardsDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="scoreboardsDl"/>
        </hbox>
        <dataGrid id="scoreboardsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="scoreboardsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="mark"/>
                <column property="student"/>
                <column property="major"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
